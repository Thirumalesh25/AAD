<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- USERNAME -->
    <TextView
        android:id="@+id/t1"
        android:layout_width="76dp"
        android:layout_height="38dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="88dp"
        android:text="Username : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/e1"
        android:layout_width="249dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/t1"
        app:layout_constraintStart_toEndOf="@+id/t1"
        app:layout_constraintTop_toTopOf="@+id/t1"
        app:layout_constraintVertical_bias="0.0" />


    <!-- PASSWORD -->
    <TextView
        android:id="@+id/t2"
        android:layout_width="76dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:text="Password : "
        app:layout_constraintEnd_toEndOf="@+id/t1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/t1"
        app:layout_constraintTop_toBottomOf="@+id/t1" />

    <EditText
        android:id="@+id/e2"
        android:layout_width="234dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        app:layout_constraintBottom_toBottomOf="@+id/t2"
        app:layout_constraintStart_toEndOf="@+id/t2"
        app:layout_constraintTop_toTopOf="@+id/t2"
        app:layout_constraintVertical_bias="1.0" />

    <!-- DOB -->
    <TextView
        android:id="@+id/t3"
        android:layout_width="76dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:text="Date of Birth : "
        app:layout_constraintEnd_toEndOf="@+id/t2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/t2"
        app:layout_constraintTop_toBottomOf="@+id/t2" />

    <EditText
        android:id="@+id/e3"
        android:layout_width="234dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:inputType="date"
        android:hint="DD/MM/YYYY"
        app:layout_constraintBottom_toBottomOf="@+id/t3"
        app:layout_constraintStart_toEndOf="@+id/t3"
        app:layout_constraintTop_toTopOf="@+id/t3"
        app:layout_constraintVertical_bias="0.428" />

    <!-- AGE -->
    <TextView
        android:id="@+id/t4"
        android:layout_width="76dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:text="Age : "
        app:layout_constraintEnd_toEndOf="@+id/t3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/t3"
        app:layout_constraintTop_toBottomOf="@+id/t3" />

    <EditText
        android:id="@+id/e4"
        android:layout_width="234dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/t4"
        app:layout_constraintStart_toEndOf="@+id/t4"
        app:layout_constraintTop_toTopOf="@+id/t4"
        app:layout_constraintVertical_bias="0.0" />

    <!-- GENDER -->
    <TextView
        android:id="@+id/t5"
        android:layout_width="76dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:text="Gender : "
        app:layout_constraintEnd_toEndOf="@+id/t4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/t4"
        app:layout_constraintTop_toBottomOf="@+id/t4" />

    <RadioGroup
        android:id="@+id/e5"
        android:layout_width="234dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/t5"
        app:layout_constraintStart_toEndOf="@+id/t5"
        app:layout_constraintTop_toTopOf="@+id/t5"
        app:layout_constraintVertical_bias="0.312">

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="117dp"
            android:layout_height="match_parent"
            android:text="Male" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="117dp"
            android:layout_height="match_parent"
            android:text="Female" />
    </RadioGroup>

    <!-- COUNTRY -->
    <TextView
        android:id="@+id/t6"
        android:layout_width="76dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:text="Country : "
        app:layout_constraintEnd_toEndOf="@+id/t5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/t5"
        app:layout_constraintTop_toBottomOf="@+id/t5" />

    <Spinner
        android:id="@+id/e6"
        android:layout_width="234dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/t6"
        app:layout_constraintStart_toEndOf="@+id/t6"
        app:layout_constraintTop_toTopOf="@+id/t6"
        app:layout_constraintVertical_bias="0.0" />

    <!-- SUBMIT -->
    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="184dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e6"
        app:layout_constraintVertical_bias="0.396" />

    <TextView
        android:id="@+id/output"
        android:layout_width="162dp"
        android:layout_height="165dp"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>